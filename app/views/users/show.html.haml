= render "shared/main-header"
.mypage-main
  .user-profile
    .profile-user-top
      .profile-image
        = image_tag current_user.image.url, class: "image"
      .profile-name
        = current_user.name
      .profile-post-count
    .profile-user-middle
      .profile-user-text
        = current_user.profile
    .profile-user-bottom
      .profile-post-count
        166 æŠ•ç¨¿
  .contents-box
    - if @posts.present?
      - @posts.each do |post|
        = link_to post_path(post.id) do
          .contents-post
            .contents-top
              = image_tag post.user.image.url, class: "image"
              .top-right
                .name-box
                  = "@#{post.user.name}"
                .postdate-box
                  = post.created_at.strftime('%Y/%m/%d %H:%M')
            .contents-bottom
              .place-box
                %i.fas.fa-map-marker-alt
                = post.place
              .date-box
                %i.far.fa-calendar-alt
                = post.date
              .title-box
                = post.title
              .text-box
                = post.text
            .action-box
              .like-area
                %i.far.fa-heart
                1
              .comment-area
                %i.far.fa-comment-alt
                3

  = render :partial => "shared/sidebar"
